<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly" PreferExactMatches="@true">
        <Found Context="routeData">
            @if (ConfigurationStatus is not null && !ConfigurationStatus.Configured)
            {
                <LayoutView Layout="@typeof(MainInstalationLayout)">
                    <PIZZA.WebAssembly.Pages.Instalation.Instalation />
                </LayoutView>
            }
            else if (ConfigurationStatus is not null)
            {
                <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                    <NotAuthorized>
                        <p>Nie jesteœ tutaj mile widziany.</p>
                        @NavigateToLogin()
                    </NotAuthorized>
                    <Authorizing>
                        <p>Czekaj, tylko sprawdzê czy mam Ciê na liœcie...</p>
                    </Authorizing>
                </AuthorizeRouteView>
            }
        </Found>
        <NotFound>
            @if (ConfigurationStatus is not null && !ConfigurationStatus.Configured)
            {
                <LayoutView Layout="@typeof(MainInstalationLayout)">
                    <p>Sorry, there's nothing at this address.</p>
                </LayoutView>
            }
            else if (ConfigurationStatus is not null)
            {
                <LayoutView Layout="@typeof(MainLayout)">
                    <p>Sorry, there's nothing at this address.</p>
                </LayoutView>
            }
            else
            {
                <p>Sorry, there's nothing at this address.</p>
            }
        </NotFound>
    </Router>
</CascadingAuthenticationState>